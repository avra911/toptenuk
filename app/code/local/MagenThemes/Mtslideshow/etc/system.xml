	<magenthemes translate="label">
	    <label>MagenThemes Extension</label>
	    <sort_order>205</sort_order>
	</magenthemes>
    </tabs>
    <sections>
	<mtslideshow translate="label" module="mtslideshow">
	    <label>MT Slideshow</label>
	    <tab>magenthemes</tab>
	    <sort_order>130</sort_order>
	    <show_in_default>1</show_in_default>
	    <show_in_website>1</show_in_website>
	    <show_in_store>1</show_in_store>
	    <groups>
		<mtslideshow_config translate="label">
		    <label>General Configuration</label>
		    <frontend_type>text</frontend_type>
		    <sort_order>1</sort_order>
		    <show_in_default>1</show_in_default>
		    <show_in_website>1</show_in_website>
		    <show_in_store>1</show_in_store>
		    <fields>
			<enabled translate="label">
			    <label>Enable</label>
			    <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
			    <sort_order>1</sort_order>
			    <show_in_default>1</show_in_default>
			    <show_in_website>1</show_in_website>
			    <show_in_store>1</show_in_store>							
			</enabled>
		    </fields>
		</mtslideshow_config>
		<slider_settings translate="label">
		    <label>Slider Settings</label>
		    <frontend_type>text</frontend_type>
		    <sort_order>2</sort_order>
		    <show_in_default>1</show_in_default>
		    <show_in_website>1</show_in_website>
		    <show_in_store>1</show_in_store>
		    <fields>
				<theme translate="label">
					<label>Theme</label>
					<frontend_type>select</frontend_type>
					<source_model>mtslideshow/config_mode</source_model>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
				</theme>
                <flexslider_animation>
                    <label>Animation: </label>
                    <frontend_type>select</frontend_type>
                    <comment>Select your animation type</comment>
                    <source_model>mtslideshow/config_effect</source_model>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_animation>
                <flexslider_auto>
                    <label>Auto: </label>
                    <frontend_type>select</frontend_type>
                    <comment>Change slider height according to slide</comment>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>43</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_auto>
                <flexslider_smoothheight>
                    <label>Smooth Height change: </label>
                    <frontend_type>select</frontend_type>
                    <comment>Change slider height according to slide</comment>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>45</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_smoothheight>
                <flexslider_animation_loop>
                    <label>Animation loop: </label>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <comment>Should the animation loop?</comment>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_animation_loop>
                <flexslider_mousewheel>
                    <label>Mousewheel: </label>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <comment>Allows slider navigating via mousewheel</comment>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_mousewheel>
                <flexslider_slideshow_speed>
                    <label>Slideshow speed: </label>
                    <frontend_type>text</frontend_type>
                    <comment>Set the speed of the slideshow cycling, in milliseconds</comment>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_slideshow_speed>
                <flexslider_animation_speed>
                    <label>Animation speed: </label>
                    <frontend_type>text</frontend_type>
                    <comment>Set the speed of animations, in milliseconds</comment>
                    <sort_order>80</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_website>1</show_in_website>
                    <depends><theme>mtflexslider</theme></depends>
                </flexslider_animation_speed>
                <flexslider_control_nav>
                    <label>Show navigation: </label>
