                    <show_in_store>1</show_in_store>
                    <validate>required-entry validate-not-negative-number</validate>
                    <depends><theme>mtcooslider</theme></depends>
                    <comment><![CDATA[The number of milliseconds to show each slide.]]></comment>
                </cooslider_interval>
                <cooslider_delay translate="label">
                    <label>Delay effect</label>
                    <frontend_type>text</frontend_type>
