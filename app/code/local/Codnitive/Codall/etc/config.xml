<config>
	<modules>
		<Codnitive_Codall>
			<version>1.0.15</version>
			<title>CODNITIVEÂ® Information</title>
			<link><![CDATA[http://www.codnitive.com/]]></link>
		</Codnitive_Codall>
	</modules>
	
	<global>
		<models>
			<codall>
				<class>Codnitive_Codall_Model</class>
			</codall>
		</models>
		<helpers>
			<codall>
				<class>Codnitive_Codall_Helper</class>
			</codall>
		</helpers>
		<resources>
			<codall_setup>
				<setup>
					<module>Codnitive_Codall</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</codall_setup>
			<codall_write>
				<connection>
					<use>core_write</use>
				</connection>
			</codall_write>
			<codall_read>
				<connection>
					<use>core_read</use>
				</connection>
			</codall_read>
		</resources>
		<blocks>
			<codall>
				<class>Codnitive_Codall_Block</class>
			</codall>
		</blocks>
	</global>

	<adminhtml>
		<translate>
			<modules>
				<Codnitive_Codall>
					<files>
						<default>Codnitive_Codall.csv</default>
					</files>
				</Codnitive_Codall>
			</modules>
		</translate>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<codall>
											<title>CODNITIVE Information</title>
										</codall>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>