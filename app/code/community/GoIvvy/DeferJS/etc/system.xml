<?xml version="1.0"?>
<config>
 <sections>
   <deferjs>
     <label>Defer JS</label>
     <tab>advanced</tab> 
     <frontend_type>text</frontend_type>
     <sort_order>104</sort_order>
     <show_in_default>1</show_in_default>
     <show_in_website>1</show_in_website>
     <show_in_store>1</show_in_store>
     <groups>
       <general>
         <label>General Configuration</label>
         <frontend_type>text</frontend_type>
         <sort_order>1</sort_order>
         <show_in_default>1</show_in_default>
         <show_in_website>1</show_in_website>
         <show_in_store>1</show_in_store>
         <fields>
           <active>
             <label>Enabled</label>
             <frontend_type>select</frontend_type>   
             <source_model>adminhtml/system_config_source_yesno</source_model>
             <sort_order>1</sort_order>
             <show_in_default>1</show_in_default>
             <show_in_website>1</show_in_website>
             <show_in_store>1</show_in_store>  
           </active> 
           <deferjs_exclude_controllers>
             <label>Exclude controllers</label>
             <comment><![CDATA[Listed controllers will be unaffected by deferjs]]></comment>
             <frontend_model>goivvy_deferjs/adminhtml_form_field_regex</frontend_model>
             <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
             <sort_order>2</sort_order>
             <show_in_default>1</show_in_default>
             <show_in_website>1</show_in_website>
             <show_in_store>1</show_in_store>
           </deferjs_exclude_controllers>
           <deferjs_exclude_path>
             <label>Exclude path</label>
             <comment><![CDATA[Listed paths will be unaffected by deferjs]]></comment> 
             <frontend_model>goivvy_deferjs/adminhtml_form_field_regex</frontend_model>
             <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
             <sort_order>3</sort_order>
             <show_in_default>1</show_in_default>
             <show_in_website>1</show_in_website>
             <show_in_store>1</show_in_store>
           </deferjs_exclude_path>
         </fields>
       </general> 
     </groups>
   </deferjs> 
 </sections>
</config>
