<?php
    $columns = $this->getColumns();
?>
<table class="table table-bordered" id="wishlist-table">
    <thead class="hidden-phone">
        <tr>
            <?php foreach ($columns as $column): ?>
                <th><?php echo $column->getTitle();?></th>
            <?php endforeach; ?>
        </tr>
    </thead>
    <tbody>
        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
                <tr id="item_<?php echo $item->getId();?>">
                    <?php foreach ($columns as $column): ?>
                        <td class="a-center"><?php $column->setItem($item); echo $column->toHtml($item);?></td>
                    <?php endforeach; ?>
                </tr>
            <?php endforeach ?>
        <?php else: ?>
            <td colspan="<?php echo count($columns);?>" class="wishlist-empty"><?php echo $this->__('This Wishlist has no Items');?></td>
        <?php endif; ?>
    </tbody>
</table>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
//<![CDATA[
    decorateTable('wishlist-table');

<?php foreach ($columns as $column): ?>
    <?php echo $column->getJs();?>
<?php endforeach; ?>
//]]>
</script>
<script type="text/javascript">
$mtkb(document).ready(function(){
	$mtkb('table#wishlist-table tbody td:eq(0)').addClass('wl-col1');
	$mtkb('table#wishlist-table tbody td:eq(1)').addClass('wl-col2');
	$mtkb('table#wishlist-table tbody td:eq(2)').addClass('wl-col3');
	$mtkb('table#wishlist-table tbody td:eq(3)').addClass('wl-col4');			
});
</script>