/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
<div class="form-language span6">
	<div class="select pull-recht">
		<label for="select-language" id="mt_language" class="hidden-tablet"><?php echo $this->__('Language:') ?></label>
		<select id="select-language" title="<?php echo $this->__('Language') ?>" onchange="window.location.href=this.value">
		<?php foreach ($this->getStores() as $_lang): ?>
			<?php $_selected = ($_lang->getId() == $this->getCurrentStoreId()) ? ' selected="selected"' : '' ?>
			<option class="" value="<?php echo $_lang->getCurrentUrl() ?>"<?php echo $_selected ?>><?php echo $this->htmlEscape($_lang->getName()) ?></option>
		<?php endforeach; ?>
		</select>
		
		<script type="text/javascript"[]>
			$mtkb(document).ready(function(){					
				$mtkb('.sbOptions li:eq(0) a').addClass('eng'); 
				$mtkb('.sbOptions li:eq(1) a').addClass('frm'); 
				$mtkb('.sbOptions li:eq(2) a').addClass('gre'); 
				$mtkb('.sbOptions li:eq(3) a').addClass('it'); 
				$mtkb('.sbOptions li:eq(4) a').addClass('es'); 
				$mtkb('.sbHolder:eq(0)').addClass('lang');
				$mtkb('.sbHolder:eq(1)').addClass('curs');
			});
		</script>		
	</div>
</div>
<?php endif; ?>
