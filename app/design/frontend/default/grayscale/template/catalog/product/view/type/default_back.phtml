<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */?>
<?php $_product = $this->getProduct() ?>

<?php if ($_product->isAvailable()): ?>

		<?php if(preg_match("/repair/i", $_product->getName()) || preg_match("/reparatur/i", $_product->getName()) || preg_match("/réparation/i", $_product->getName()) || preg_match("/riparazione/i", $_product->getName()) || preg_match("/reparación/i", $_product->getName()) ): ?>

			<?php else: ?>

				<p class="availability in-stock"><?php echo $this->__('Qty in Stock:') ?> <span><!--<?php echo $this->__('In stock') ?>--><?= (int) Mage::getModel('cataloginventory/stock_item')->loadByProduct($_product)->getQty()?></span></p>
			<?php endif; ?>
<?php else: ?>

    <p class="availability out-of-stock"><?php echo $this->__('Available in 2 to 3 days') ?> 
<?php endif; ?>
<?php echo $this->getChildHtml('product_type_data_extra') ?>
<?php if($_product->getPrice() != 0): ?>
<?php echo $this->getPriceHtml($_product) ?>
<?php endif; ?>